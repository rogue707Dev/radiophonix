{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "baseUrl": "resources/assets/js",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "~*": [
                "./*"
            ]
        }
    },
    "include": [
        "resources/assets/js/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
